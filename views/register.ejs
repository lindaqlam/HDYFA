<%- include('partials/header') %>

<h1>Sign up!</h1>

<form action="/register" method="post">

    <ul>
        <li>First name: <input type="first_name" name="first_name" placeholder="first name" pattern="[a-zA-Z]+" title="First name" required></li>
        <li>Last name: <input type="last_name" name="last_name" placeholder="last name" pattern="[a-zA-Z]+" title="Last name optional"></li>
        <li>Email address: <input type="email" name="email" placeholder="email" title="Valid email address" required></li>
        <li>Username: <input type="text" name="username" placeholder="username" pattern="[a-z0-9-_]+" title="Must only contain lowercase letters, numbers, and underscore (_) or hyphen (-)" required></li>
        <li>Password: <input type="password" name="password" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least 1 number, 1 uppercase letter, 1 lowercase letter, and be at least 8 characters" required></li>
    </ul>
    <button>Sign up</button>
</form>

<%- include('partials/footer') %>