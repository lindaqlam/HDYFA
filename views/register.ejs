<%- include('partials/header') %>

<div class="container">
    <div class="user-form">
        <div>
            <h1>Sign Up</h1>
        </div>

        <div>
            <form class="user-form" action="/register" method="post">
                <ul>
                    <li><label for="first_name">First name: </label><input type="text" name="first_name" placeholder="first name" pattern="[a-zA-Z ]+" title="First name" required></li>
                    <li><label for="last">Last name: </label><input type="text" name="last_name" placeholder="last name" pattern="[a-zA-Z]+" title="Last name optional"></li>
                    <li><label for="birthday">Birthday:</label><input type="date" id="birthday" name="birthday" max="2004-12-31" title="Must be 16 years or older" required></li>
                    <li><label>Gender:</label></li>
                        <div style="margin-left: 50px;">
                            <li><input type="radio" id="female" name="gender" value="female">  <label for="female">Female</label></li>
                            <li><input type="radio" id="male" name="gender" value="male">  <label for="male">Male</label></li>
                            <li><input type="radio" id="other" name="gender" value="other">  <label for="other">Other:</label></li>
                            <li><input type="radio" id="private" name="gender" value="private">  <label for="private">Prefer not to specify</label></li>
                        </div>
                    <li><label for="email">Email address: </label><input type="email" name="email" placeholder="email" title="Valid email address" required></li>
                    <li><label for="username">Username:</label><input type="text" name="username" placeholder="username" pattern="[a-z0-9-_]+" title="Must only contain lowercase letters, numbers, and underscore (_) or hyphen (-)" required></li>
                    <li><label for="password">Password:</label><input type="password" name="password" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least 1 number, 1 uppercase letter, 1 lowercase letter, and be at least 8 characters" required></li>
                    <li><label for="bio">One-line Bio:</label><input type="bio" name="bio" placeholder="one-line bio" title="One line about yourself (optional)"></li>
                    <li><label for="photo">Profile photo link:</label><input type="url" name="photo" placeholder="photo link" title="Profile photo link must start with http: (optional)"></li></li>
                </ul>
                <input type="submit" value="Signup">
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>