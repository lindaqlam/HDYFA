<%- include('partials/header') %>

<div class="container">
    <div class="user-form">
        <h1 style="text-align:center;">Sign Up</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="first_name">First name: </label><input class="form-control" type="text" name="first_name" placeholder="first name" pattern="[a-zA-Z ]+" title="First name" required>
                </div>
                <div class="form-group">
                    <label for="last">Last name: </label><input class="form-control" type="text" name="last_name" placeholder="last name" pattern="[a-zA-Z]+" title="Last name optional">
                </div>
                <div class="form-group">
                    <label for="birthday">Birthday:</label><input class="form-control" type="date" id="birthday" name="birthday" max="2004-12-31" title="Must be 16 years or older" required>
                </div>
                <div class="form-group">
                    <label>Gender:</label>
                        <div style="margin-left: 50px;">
                            <ul>
                                <li><input type="radio" id="female" name="gender" value="female">  <label for="female">Female</label></li>
                                <li><input type="radio" id="male" name="gender" value="male">  <label for="male">Male</label></li>
                                <li><input type="radio" id="other" name="gender" value="other">  <label for="other">Other:</label></li>
                                <li><input type="radio" id="private" name="gender" value="private">  <label for="private">Prefer not to specify</label></li>
                            </ul>
                        </div>
                </div>
                <div class="form-group">
                    <label for="email">Email address: </label><input class="form-control" type="email" name="email" placeholder="email" title="Valid email address" required>
                </div>
                <div class="form-group">
                    <label for="username">Username:</label><input class="form-control" type="text" name="username" placeholder="username" pattern="[a-z0-9-_]+" title="Must only contain lowercase letters, numbers, and underscore (_) or hyphen (-)" required>                   
                </div>
                <div class="form-group">
                    <label for="password">Password:</label><input class="form-control" type="password" name="password" placeholder="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least 1 number, 1 uppercase letter, 1 lowercase letter, and be at least 8 characters" required>
                </div>
                <div class="form-group">
                    <label for="bio">One-line Bio:</label><input class="form-control" type="bio" name="bio" placeholder="one-line bio" title="One line about yourself (optional)">
                </div>
                <div class="form-group">
                    <label for="photo">Profile photo link:</label><input class="form-control" type="url" name="photo" placeholder="photo link" title="Profile photo link must start with http: (optional)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="submit" value="Signup">
                </div>
            </form>
        </div>


<%- include('partials/footer') %>