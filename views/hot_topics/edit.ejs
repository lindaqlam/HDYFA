<%- include('../partials/header') %>

<div class="container">
    <div class="user-form">
        <h1 style="text-align:center;">Edit <%= hot_topic.title %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/hot_topics/<%= hot_topic._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hot_topic[title]" value="<%= hot_topic.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hot_topic[image]" value="<%= hot_topic.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" name="hot_topic[description]"><%= hot_topic.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>                
            </form>
            
            <a href="/hot_topics">Go back</a>
        </div>
        
    </div>
</div>


<%- include('../partials/footer') %>