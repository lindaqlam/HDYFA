<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 id="page-heading"><strong>Hot Topics</strong></h1>
            <p>
                <a class="btn btn-success btn-lg" href="/hot_topics/new">Post a new hot topic</a>
            </p>
        </div>
    </header>
    
    <div class="container">
        <div class="row">
            <form action="/search" method="GET">
                <input id="search-bar" type="text" name="search_text" placeholder="Search">
                <button><i class="fas fa-search"></i></button>
                <button>Show All Hot Topics</button>
            </form>            
            
        </div>
        

    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% hot_topics.forEach(function(hot_topic){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/hot_topics/<%= hot_topic._id %>"><img src="<%= hot_topic.image %>"></a>
                    <div class="caption">
                        <h4><a href="/hot_topics/<%= hot_topic._id %>"><%= hot_topic.title %></a></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>




<%- include('../partials/footer') %>