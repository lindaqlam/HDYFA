<%- include('../partials/header') %>

<div class="container">
    <div class="user-form">
        <h1 style="text-align:center;">Report Hot Topic titled "<%= hot_topic.title %>"</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/hot_topics/<%= hot_topic._id %>/report" method="post">
                <div class="form-group">
                    <p><%= hot_topic.description %></p>
                </div>
                <div class="form-group">
                    <label for="report_reason">Reason for reporting: </label>
                    <textarea class="form-control" rows="10" name="report_reason" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button> 
                </div>
            </form> 
            <a href="/hot_topics/<%= hot_topic._id %>">Go back</a>           
            
        </div>
        
    </div>
</div>


<%- include('../partials/footer') %>