<%- include('../partials/header') %>

<div class="container">
    <div class="user-form">
        <h1 style="text-align:center;">So, how do you feel about it?</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/hot_topics/<%= hot_topic._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="10" type="text" name="comment[text]" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/hot_topics/<%= hot_topic._id %>">Go back</a>
        </div>
        
    </div>
</div>


